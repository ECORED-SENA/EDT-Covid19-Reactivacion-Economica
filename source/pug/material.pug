include mixins/functions

doctype
html(lang="es")
    head
        include includes/head.pug


    body#page-home.theme-dark.page-header-textura

        header#CursoPresentacion.curso-presentacion.page-header
            .page-textura
                .container

                    include includes/page-home_topbar.pug

                    +pageHeader("Tema", "assets/images/header/header_media.svg", "")   

        section#ResultadosAprendizaje.curso-resultados.section.bg-base-light

            .container

                include includes/page-home_resultados.pug  

        section#IndiceTematico.curso-indice-tematico.section

            .container

                h2 Desarrollo de <br>contenidos
                .brand-line-primary

                .row.justify-content-center
                    .col-12.col-sm-10
                        .card.wow.flipInX(data-wow-delay=".4s")
                            
                            .card-body

                                ul.list-group.list-group-flush.list.my-n3.nav-temas
                                    +navTemaItem('play', 'Introducción', '#introduccion')
                                    +navTemaItem('1', 'Actualización del Sistemas de Gestión en Seguridad y Salud en el Trabajo (SG-SST)', '#tema-1')
                                    +navTemaItem('2', 'Vigilancia epidemiológica de trabajadores', '#tema-2')
                                    +navTemaItem('3', 'Medidas de protección personal', '#tema-3')
                                    +navTemaItem('4', 'Servicios públicos e infraestructura', '#tema-4')
                                    +navTemaItem('5', 'Jornadas de descanso y horas de alimentación', '#tema-5')
                                    +navTemaItem('6', 'Protocolos de ingreso y permanencia de clientes, provedores y contratistas', '#tema-6')
                                    +navTemaItem('7', 'Plan de comunicaciones', '#tema-7')
                                    +navTemaItem('glosary', 'Glosario', '#glosario')
                                    +navTemaItem('folder', 'Material complementario', '#anexos')
                                    +navTemaItem('references', 'Referencias bibliográficas', '#referencias')


        section#mainContent         
            #introduccion
                include pages/introduccion.pug
            #tema-1
                include pages/tema-1.pug
            #tema-2
                include pages/tema-2.pug
            #tema-3
                include pages/tema-3.pug
            #tema-4
                include pages/tema-4.pug
            #tema-5
                include pages/tema-5.pug
            #tema-6
                include pages/tema-6.pug
            #tema-7
                include pages/tema-7.pug
            #glosario
                include pages/glosario.pug
            #anexos
                include pages/material-complementario.pug
            #referencias
                include pages/referencias.pug


        +creditosFooter("assets/images/logos/senaLogo.svg")


        a.scroll-to-top-btn
            .fa.fa-angle-up.fa-2x

        script(src="assets/js/vendor.js")
        script(src="js/local.js")





